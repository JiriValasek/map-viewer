<Window x:Class="MapViewer.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapViewer.Wpf"
        xmlns:v="clr-namespace:MapViewer.Wpf.Views"
        xmlns:vm="clr-namespace:MapViewer.Core.ViewModels;assembly=MapViewer.Core"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        MinHeight="450" 
        MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vm:MapViewModel}">
                <v:MapView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <v:SettingsView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
        
    </Grid>
</Window>
