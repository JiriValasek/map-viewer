<UserControl x:Class="MapViewer.Wpf.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapViewer.Wpf.Views"
             xmlns:converters="clr-namespace:MapViewer.Wpf.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="800"
             d:Background="Wheat"
             FontSize="14"
             Margin="10,0">
    <UserControl.Resources>

        <converters:ColoConverter x:Key="ColorToBrushConverter" />
        
        <Style x:Key="SectionStyle" TargetType="Label">
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="DemiBold" />
        </Style>

        <Style x:Key="TextBoxInError" TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={x:Static RelativeSource.Self},
                                     Path=(Validation.Errors).CurrentItem.ErrorContent}"/>
                </Trigger>
                <Trigger Property="Validation.HasError" Value="false">
                    <Setter Property="ToolTip"
                            Value=""/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Grid.IsSharedSizeScope="True"
          HorizontalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>


            <Label Grid.Row="0" 
                   Style="{StaticResource ResourceKey=SectionStyle}"
                   Content="Map Colors"/>
            <Grid Grid.Row="1" Margin="10,10,0,0" Grid.IsSharedSizeScope="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                    <ColumnDefinition Width="200" SharedSizeGroup="SecondColumn" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Min altitude color"
                       HorizontalContentAlignment="Right"
                       Foreground="{Binding MinAltitudeColorForeground, Converter={StaticResource ColorToBrushConverter}}"
                       Background="{Binding MinAltitudeColorBackground, Converter={StaticResource ColorToBrushConverter}}"/>
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding MinAltitudeColor, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Min altitude color"
                       HorizontalContentAlignment="Right"
                       Foreground="{Binding MaxAltitudeColorForeground, Converter={StaticResource ColorToBrushConverter}}"
                       Background="{Binding MaxAltitudeColorBackground, Converter={StaticResource ColorToBrushConverter}}"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding MaxAltitudeColor, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}" />
            </Grid>


            <Label Grid.Row="2" 
                   Style="{StaticResource ResourceKey=SectionStyle}"
                   Content="Circle"/>
            <Grid Grid.Row="3" Margin="10,10,0,0" Grid.IsSharedSizeScope="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                    <ColumnDefinition Width="auto" SharedSizeGroup="SecondColumn" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Circle color" 
                       HorizontalContentAlignment="Right"
                       Foreground="{Binding CircleColorForeground, Converter={StaticResource ColorToBrushConverter}}"
                       Background="{Binding CircleColorBackground, Converter={StaticResource ColorToBrushConverter}}"/>
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding CircleColor, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Center color" 
                       HorizontalContentAlignment="Right"
                       Foreground="{Binding CenterColorForeground, Converter={StaticResource ColorToBrushConverter}}"
                       Background="{Binding CenterColorBackground, Converter={StaticResource ColorToBrushConverter}}"/>
                <TextBox Grid.Row="1" 
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding CenterColor, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}" />

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Line Width"
                       HorizontalContentAlignment="Right" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding LineWidth, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}" />

                <Label Grid.Row="3"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Center size"
                       HorizontalContentAlignment="Right"/>
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding CenterSize, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}" />

                <Label Grid.Row="4"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Segment count"
                       HorizontalContentAlignment="Right" />
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding SegmentCount, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}" />
            </Grid>

            <Label Grid.Row="4" 
                   Style="{StaticResource ResourceKey=SectionStyle}"
                   Content="Controls"/>
            <Grid Grid.Row="5" Margin="10,10,0,0" Grid.IsSharedSizeScope="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" SharedSizeGroup="FirstColumn" />
                    <ColumnDefinition Width="auto" SharedSizeGroup="SecondColumn" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Zoom sensitivity"
                       HorizontalContentAlignment="Right" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding ZoomSensitivity, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}"/>

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Rotation step"
                       HorizontalContentAlignment="Right" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding RotationStep, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}"/>

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Margin="10,2,0,2"
                       Content="Movement step"
                       HorizontalContentAlignment="Right" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Margin="10,3"
                         Text="{Binding MovementStep, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxInError}"/>
            </Grid>


            <StackPanel Grid.Row="6"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="10,15,0,15"
                        Orientation="Horizontal">
                <Button Command="{Binding SaveCommand}"
                        Content="Save" />
                <Button Margin="10,0,0,0"
                        Command="{Binding CancelCommand}"
                        Content="Cancel">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
